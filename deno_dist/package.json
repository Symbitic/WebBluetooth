{
  "name": "webbluetooth",
  "version": "2.2.0",
  "description": "Node.js implementation of the Web Bluetooth Specification",
  "homepage": "https://github.com/thegecko/webbluetooth",
  "author": "Rob Moran <rob@thegecko.org>",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "browser": "dist/browser.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "browser": "./dist/browser.js",
    "import": "./dist/index.js",
    "bun": "./src/index.bun.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/thegecko/webbluetooth.git"
  },
  "keywords": [
    "ble",
    "bluetooth",
    "node",
    "bun",
    "deno",
    "web-bluetooth",
    "webbluetooth"
  ],
  "engines": {
    "node": ">=12.0"
  },
  "scripts": {
    "build-cpp": "cmake-js compile",
    "build-deno": "denoify",
    "build-ts": "tsc",
    "build": "concurrently \"npm:build-*\"",
    "clean": "cmake-js clean",
    "docs": "typedoc",
    "install": "prebuild-install --backend cmake-js --runtime napi || cmake-js rebuild",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepublishOnly": "npm run build-ts",
    "pre-build": "prebuild --backend cmake-js --runtime napi --all --strip --verbose",
    "watch": "tsc -w --preserveWatchOutput"
  },
  "binary": {
    "module_name": "simpleble",
    "module_path": "./build/Release/",
    "remote_path": "v{version}",
    "host": "https://github.com/thegecko/webbluetooth/releases/download/",
    "napi_versions": [
      6
    ]
  },
  "denoify": {
    "index": "./src/mod.deno.ts",
    "includes": [
      "examples/deno",
      "LICENSE",
      "README.md",
      "package.json"
    ]
  },
  "dependencies": {
    "cmake-js": "^7.0.0",
    "node-addon-api": "^5.0.0",
    "prebuild-install": "^7.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "concurrently": "^7.5.0",
    "denoify": "^1.4.2",
    "eslint": "^8.25.0",
    "npm-run-all": "^4.1.5",
    "prebuild": "^11.0.4",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.17",
    "typescript": "^4.8.4"
  }
}
