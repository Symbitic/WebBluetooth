{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "deno_dist/",
        "dist",
        "node_modules",
        "src/*.deno.ts",
        "src/*.bun.ts"
    ]
}
