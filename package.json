{
  "name": "webbluetooth",
  "version": "2.2.0",
  "description": "Node.js implementation of the Web Bluetooth Specification",
  "homepage": "https://github.com/thegecko/webbluetooth",
  "author": "Rob Moran <rob@thegecko.org>",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "browser": "dist/browser.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "browser": "./dist/browser.js",
    "bun": "./dist/index.bun.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/thegecko/webbluetooth.git"
  },
  "keywords": [
    "ble",
    "bluetooth",
    "node",
    "bun",
    "deno",
    "web-bluetooth",
    "webbluetooth"
  ],
  "engines": {
    "node": ">=14.0"
  },
  "scripts": {
    "clean": "git clean -f -x ./dist ./docs",
    "build": "tsc && $npm_execpath run lint && $npm_execpath run docs",
    "watch": "tsc -w --preserveWatchOutput",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "docs": "typedoc"
  },
  "dependencies": {
    "@abandonware/noble": "1.9.2-15",
    "simpleble": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.3",
    "@types/web-bluetooth": "^0.0.16",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.17",
    "typescript": "^4.8.4"
  }
}
